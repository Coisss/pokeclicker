#:kivy 2.3.0
#:set poke_font 221/255, 55/255, 34/255
#:set rebirth_font 255/255, 255/255, 255/255

<RoundedButtonColor1@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (200/255, 200/255, 200/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]

<RoundedButtonColor2@Button>
    background_color: (0,0,0,0)
